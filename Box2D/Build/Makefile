# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x86_64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x86_64)
  Box2D_config = debug_x86_64
  HelloWorld_config = debug_x86_64
  Testbed_config = debug_x86_64
endif
ifeq ($(config),release_x86_64)
  Box2D_config = release_x86_64
  HelloWorld_config = release_x86_64
  Testbed_config = release_x86_64
endif

PROJECTS := Box2D HelloWorld Testbed

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Box2D:
ifneq (,$(Box2D_config))
	@echo "==== Building Box2D ($(Box2D_config)) ===="
	@${MAKE} --no-print-directory -C . -f Box2D.make config=$(Box2D_config)
endif

HelloWorld: Box2D
ifneq (,$(HelloWorld_config))
	@echo "==== Building HelloWorld ($(HelloWorld_config)) ===="
	@${MAKE} --no-print-directory -C . -f HelloWorld.make config=$(HelloWorld_config)
endif

Testbed: Box2D
ifneq (,$(Testbed_config))
	@echo "==== Building Testbed ($(Testbed_config)) ===="
	@${MAKE} --no-print-directory -C . -f Testbed.make config=$(Testbed_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Box2D.make clean
	@${MAKE} --no-print-directory -C . -f HelloWorld.make clean
	@${MAKE} --no-print-directory -C . -f Testbed.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x86_64"
	@echo "  release_x86_64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Box2D"
	@echo "   HelloWorld"
	@echo "   Testbed"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"